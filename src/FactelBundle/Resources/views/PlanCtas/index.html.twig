{% extends "FactelBundle::Layout.html.twig" %}
{% block css %}
<!-- DataTables CSS -->
<link href="{{asset('recursos/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.css')}}" rel="stylesheet">
<!-- DataTables Responsive CSS -->
<link href="{{asset('recursos/bower_components/datatables-responsive/css/dataTables.responsive.css')}}" rel="stylesheet">
{% endblock %}
{% block panel_title %}
<i class="fa fa-bar-chart-o fa-fw"></i> Plan de Cuentas

<div class="pull-right">
    <a href="{{ path('factura_new') }}">
        <button class="btn btn-primary link-boton">
            <i class="fa fa-plus-circle"></i>
            Nueva
        </button>
    </a>
    
</div>
{% endblock %}
{% block content %}
<div class="dataTable_wrapper table-responsive col-lg-12">  
    <table class="table table-striped table-bordered table-hover" id="factura-table" name="f">
        <thead>
            <tr>
                <th>Nombre Empresa</th>
                <th>Codigo Cuenta</th>
                <th>Nombre Cuenta</th>
                <th>Moneda</th>
                <th>Flujo Caja</th>
                <th>Bansel</th>
                <th >Grupo</th>
                <th>Fecha Creacion</th>
            </tr>
        </thead>
        <tbody>
        
        {% for entity in valor %}
            <tr id="cta_trtable">
                {#<td><a href="{{ path('pago', { 'id': entity[0].id }) }}">{{ entity[0].nombre }}</a></td>#}
                <td HEIGHT="2" class="ruc1">{{entity.emisor.nombreComercial}}</td>
                <td HEIGHT="2" class="nombre1">{{entity.codCta}}</td>
                <td HEIGHT="2">{{ entity.tip.nombreCuenta }}</td>
                <td HEIGHT="2">{{entity.mon.nombMoneda}}</td>
                <td HEIGHT="2">{{ entity.flujoCaja }}</td>
                <td HEIGHT="2" id="cell">{{entity.bansel}}</td>{#{{ entity.fechaVencimiento|date('d-m-Y') }}</td>#}
                <td HEIGHT="2">{{ entity.grup.nombGrupo }}</td>
                <td HEIGHT="2" >{{ entity.usu.nombre }}</td>
                <td HEIGHT="2" id="sal">{{ entity.fechaCreacion|date('d-m-Y') }}</td>
            </tr>

            <tr class='noSearch hide'>

                <td colspan="5"></td>

            </tr>
        {% endfor %}
        </tbody>
    
    </table>
{% endblock %}